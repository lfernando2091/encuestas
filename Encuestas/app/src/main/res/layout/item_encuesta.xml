<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?listPreferredItemHeight"
    android:animateLayoutChanges="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="10dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/tv_user_enc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textStyle="bold"
        android:textAppearance="?textAppearanceListItem"
        tools:text="Nombre Contacto 1" />
    <TextView
        android:id="@+id/tv_status_enc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:textSize="12dp"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/tv_user_enc"
        android:textAppearance="?textAppearanceListItemSmall"
        tools:text="Status Encuesta 1" />
    <TextView
        android:id="@+id/tv_tiempo_enc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_status_enc"
        android:layout_alignLeft="@id/tv_status_enc"
        android:layout_alignParentLeft="true"
        android:textSize="10dp"
        android:layout_marginLeft="40dp"
        android:textAppearance="?textAppearanceListItemSmall"
        tools:text="Tiempo Encuesta 1" />
    <TextView
        android:id="@+id/tv_sync_enc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_status_enc"
        android:layout_alignRight="@id/tv_tiempo_enc"
        android:layout_alignParentRight="true"
        android:textSize="10dp"
        android:textAppearance="?textAppearanceListItemSmall"
        tools:text="Estado sync 1" />

    <ImageView
        android:id="@+id/iv_avatar_enc"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/ic_test_all" />
</RelativeLayout>